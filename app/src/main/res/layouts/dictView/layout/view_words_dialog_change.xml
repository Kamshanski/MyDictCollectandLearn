<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.dawandeapp.mydictcollectandlearn.zHelpClasses.ClearableEditText
        android:id="@+id/cedt_ViewWords_dialog_foreignName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="20"
        android:inputType="text"
        android:hint="@string/edtHint_ForeignWordIn"/>

    <com.dawandeapp.mydictcollectandlearn.zHelpClasses.ClearableEditText
        android:id="@+id/cedt_ViewWords_dialog_translationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="20"
        android:inputType="text"
        android:hint="@string/edtHint_TranslationWordIn"/>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top">

        <Button
            android:id="@+id/btn_ViewWords_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/btn_cancel"/>

        <View
            android:id="@+id/divider5"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@color/gray" />

        <Button
            android:id="@+id/btn_ViewWords_dialog_OK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/btn_OK"/>
    </LinearLayout>
</LinearLayout>